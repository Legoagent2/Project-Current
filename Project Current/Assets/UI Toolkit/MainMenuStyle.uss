.panel {
    background-color: rgba(154, 0, 154, 0.51);
    right: auto;
    top: auto;
    align-items: center;
    justify-content: center;
    bottom: auto;
    flex-grow: 0.333;
    translate: -43% 0;
    width: 25%;
    flex-direction: column;
    position: relative;
    left: 50%;
    transform-origin: center;
}

.menu {
    align-items: center;
    justify-content: center;
    flex-grow: 1;
}

.button {
    flex-grow: 1;
    display: flex;
    flex-direction: column;
    align-items: stretch;
    justify-content: flex-start;
    width: 437%;
    background-image: url('project://database/Assets/UI/Button_Off_Rescale.png?fileID=21300000&guid=06c57a7c644b52a4d9605a88b2769e0b&type=3#Button_Off_Rescale');
    -unity-background-scale-mode: scale-and-crop;
    border-top-left-radius: 42px;
    border-top-right-radius: 84px;
    border-bottom-right-radius: 42px;
    border-bottom-left-radius: 84px;
    background-color: rgba(75, 26, 67, 255);
}
